<Application x:Class="EmailValidatorApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Темная тема Spotify потому что я хайповый -->
        <SolidColorBrush x:Key="SpotifyDark" Color="#121212"/>
        <SolidColorBrush x:Key="SpotifyGray" Color="#181818"/>
        <SolidColorBrush x:Key="SpotifyGreen" Color="#1DB954"/>
        <SolidColorBrush x:Key="SpotifyText" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SpotifySubtext" Color="#B3B3B3"/>

        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource SpotifyDark}"/>
            <Setter Property="Foreground" Value="{StaticResource SpotifyText}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Application.Resources>
</Application>